<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br><div class="form-astriek">
    <%= form.label :Title %>
    <%= form.text_field :title, :required=> true  %>
  </div><br>

  <div class="form-astriek">
    <%= form.label :Location %>
    <%= form.text_field :address, :required=> true %>
  </div><br>

  <div class="form-astriek">  
    <%= form.label :all_day %>
    <%= form.check_box :all_day %>
  </div><br>

  <div class="form-astriek">
    <%= form.label :starts %>
    <%= form.datetime_field :start_time, :required=> true  %>
  </div><br>

  <div class="form-astriek">
    <%= form.label :ends %>
    <%= form.datetime_field :end_time, :required=>true %>
  </div><br>

  <div class="form-astriek">
    <%= form.label :calendar %>
    <%= form.text_field :calendar, :required=> true %>
  </div><br>

  <div class="form-astriek">
    <%= form.label :alert %>
    <%= form.select :alert, ['Dont remind me', 'At time of event', '5 minutes before', '15 minutes before', '30 minutes before', '1 hour before', '2 hours before', '12 hours before', '1 day before', '1 week before','add a remaindar'], :required=> true%>
  </div><br>
    <%= form.submit %>
  </div>
<% end %>
</div>
